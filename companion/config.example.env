# ============================================
# CAIGA Companion - Configuration (example)
# Copy this file to `config.env` and edit as needed
# ============================================

# Polling interval in seconds (default: 15)
POLL_INTERVAL_SECONDS=15

# Exponential backoff base on poll errors (default: 1.5)
POLL_BACKOFF_BASE=1.5

# Confidence threshold to post a tip (0.0-1.0, default: 0.6)
CONF_THRESHOLD=0.6

# Spoiler control (0=basic, 1=helpful, 2=detailed)
MAX_SPOILER_LEVEL=1

# Cooldowns (seconds)
GLOBAL_COOLDOWN_SECONDS=15
LABEL_COOLDOWN_SECONDS=30
TIP_COOLDOWN_SECONDS=180

# Mod API endpoints
STATE_URL=http://localhost:8080/state
POST_TIP_URL=http://localhost:8080/tip

# Model artifact paths
MODEL_PATH=models/context_model.pkl
LABEL_ENCODER_PATH=models/label_encoder.pkl
FEATURE_COLUMNS_PATH=models/feature_columns.json

# Logging and data dirs
LOGS_DIR=logs
DATA_DIR=data

# ---------------- Tips Dataset (dynamic) ----------------
# URL to fetch tips JSON from (leave empty for local-only)
# Example: https://raw.githubusercontent.com/yourorg/caiga-tips/main/tips.json
TIPS_DATASET_URL=
TIPS_REFRESH_SECONDS=3600

# ---------------- Gemini (optional) ----------------
# Enable Gemini (backup LLM) only if you have an API key
# Defaults keep the app fully local with a safe fallback
GEMINI_ENABLED=false
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=120

# ---------------- RAG (optional) -------------------
# Requires sentence-transformers and optionally faiss-cpu
RAG_ENABLED=false
